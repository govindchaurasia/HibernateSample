
package com.interactcrm.qstats.util;

import java.lang.reflect.Type;
import java.net.URLDecoder;
import java.util.ArrayList;
import java.util.HashMap;

import com.google.gson.Gson;
import com.google.gson.reflect.TypeToken;

/**
 * ADUtil : This class performs JSON formatting. 
 * Converts objects into JSON string.
 * Project Name: InteractionManagerMM
 * @author Vandana T. Joshi
 * @version 1.0
 * @since 1.0
 */
public class ADUtil {    
    
    /**
     * @param <T> : DataType
     * @param obj : object of type <T>
     * @return JSON formatted String.
     */
    public static <T> String getJSON(T obj) {
	Gson gson = new Gson();
	return gson.toJson(obj);
    }
}
